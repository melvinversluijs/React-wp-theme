{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": "false",
    "codeFrame": false,
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier", "import", "react"],
  "env": {
    "browser": true,
    "jest": false
  },
  "rules": {
    "react/forbid-prop-types": 0,
    "no-shadow": "warn"
  }
}
